<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="15dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:orientation="vertical"
    >

    <com.ramotion.foldingcell.FoldingCell
        xmlns:folding-cell="http://schemas.android.com/apk/res-auto"
        android:id="@+id/folding_cell"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        folding-cell:animationDuration="1300"
        folding-cell:backSideColor="@color/purple_var"
        folding-cell:additionalFlipsCount="3"
        folding-cell:cameraHeight="30"
        >

        <FrameLayout
            android:id="@+id/cell_content_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:visibility="gone">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/purple_var"
                    android:orientation="horizontal"
                    android:paddingBottom="7dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:paddingTop="7dp"
                    android:weightSum="7">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:paddingTop="2dp"

                        >
                        <ImageButton
                            android:id="@+id/shareBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_share"
                            android:scaleType="fitCenter"
                            android:layout_gravity="start"
                            app:tint="@color/white"
                            android:background="?attr/selectableItemBackgroundBorderless"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/event_bot"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Sự kiện"
                        android:fontFamily="@font/lato_bold"
                        android:gravity="center_horizontal"
                        android:layout_weight="3"
                        android:textColor="@android:color/white"
                        android:textSize="22dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:paddingTop="2dp"
                        android:gravity="right"
                        >
                        <ImageButton
                            android:id="@+id/bt_menu"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@drawable/menu_icon"
                            android:scaleY="0.8"
                            android:scaleX="0.8"
                            android:scaleType="fitCenter"
                            android:layout_gravity="end"
                            app:tint="@color/white"
                            android:background="?attr/selectableItemBackgroundBorderless"/>
                    </LinearLayout>

                </LinearLayout>

                <ImageView
                    android:id="@+id/landscape_image"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/nui"
                    android:gravity="center"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:orientation="vertical"
                    >



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="18dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="13dp"
                                android:textColor="@color/darker_gray"
                                android:fontFamily="@font/lato_black"
                                android:layout_marginBottom="5dp"
                                android:text="Địa điểm"/>
                            <TextView
                                android:id="@+id/location_bot"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="13dp"
                                android:textColor="@color/darker_gray"
                                android:fontFamily="@font/lato"
                                android:layout_marginBottom="10dp"
                                android:text="Hội An, Quảng Nam"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="13dp"
                                android:textColor="@color/darker_gray"
                                android:fontFamily="@font/lato_black"
                                android:layout_marginBottom="5dp"
                                android:text="Thời gian"/>
                            <TextView
                                android:id="@+id/date_bot"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="13dp"
                                android:textColor="@color/darker_gray"
                                android:fontFamily="@font/lato"
                                android:layout_marginBottom="10dp"
                                android:text="20-11-2021"/>
                        </LinearLayout>
                    </LinearLayout>



                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginBottom="6dp"
                        android:layout_marginTop="5dp"
                        android:background="@color/contentDividerLine"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ghi chú:"
                        android:fontFamily="@font/lato_black"
                        android:textSize="15dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        />
                    <TextView
                        android:id="@+id/content_bot"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="3dp"
                        android:paddingBottom="3dp"
                        android:text="@string/pattern"
                        />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginBottom="6dp"
                        android:layout_marginTop="9dp"
                        android:background="@color/contentDividerLine"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="10dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/purple_var"
                                android:text="Video"
                                android:fontFamily="@font/lato"
                                android:textSize="15dp"
                                android:gravity="center"/>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center">
                                <ImageButton
                                    android:id="@+id/bt_video_bot"
                                    android:layout_marginTop="5dp"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:background="?attr/selectableItemBackgroundBorderless"
                                    android:src="@drawable/ic_baseline_video_library_24"
                                    android:gravity="right"
                                    android:scaleType="fitCenter"
                                    app:tint="@color/purple_var"/>
                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_weight="1">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/purple_var"
                                    android:text="Vị trí"
                                    android:fontFamily="@font/lato"
                                    android:textSize="15dp"
                                    android:gravity="center"/>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center">
                                    <ImageButton
                                        android:id="@+id/bt_addr_bot"
                                        android:layout_marginTop="5dp"
                                        android:layout_width="40dp"
                                        android:layout_height="40dp"
                                        android:scaleType="fitCenter"
                                        android:background="?attr/selectableItemBackgroundBorderless"
                                        android:src="@drawable/ic_baseline_location_on_24"
                                        android:gravity="center_vertical"
                                        app:tint="@color/purple_var"/>
                                </LinearLayout>

                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>

        </FrameLayout>

        <FrameLayout
            android:id="@+id/cell_title_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            >
            <LinearLayout
                android:id="@+id/layout_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="2">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="10dp"
                        android:gravity="center"
                        android:background="@color/bgContentTop">
                        <TextView
                            android:id="@+id/province"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Quảng Nam"
                            android:textSize="20dp"
                            android:layout_marginBottom="20dp"
                            android:textColor="@color/white"
                            android:fontFamily="@font/lato_black"
                            android:gravity="center"
                            />

                        <TextView
                            android:id="@+id/date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="07-08"
                            android:textSize="15dp"
                            android:textColor="@color/white"
                            android:fontFamily="@font/lato"
                            android:gravity="center"
                            />

                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:padding="20dp">

                    <TextView
                        android:id="@+id/event"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nội dung: Ký sự tết"
                        android:textSize="15dp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/lato"
                        android:layout_marginBottom="10dp"

                        />
                    <TextView
                        android:id="@+id/location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Địa điểm: Phố cổ hộ an"
                        android:textSize="15dp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/lato"
                        android:layout_marginBottom="10dp"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/lato"
                                android:text="Chưa biết"
                                android:textColor="@color/light_gray"
                                android:textSize="13dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_weight="1">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/light_gray"
                                android:text="Chưa biết"
                                android:fontFamily="@font/lato"
                                android:textSize="13dp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_weight="1">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/light_gray"
                                android:text="Chưa biết"
                                android:fontFamily="@font/lato"
                                android:textSize="13dp"/>
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </FrameLayout>
    </com.ramotion.foldingcell.FoldingCell>

</LinearLayout>